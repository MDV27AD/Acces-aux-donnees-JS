{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "outDir": "./dist/backend",
    "rootDir": "./src/backend",
    "removeComments": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
}
